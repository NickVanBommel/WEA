<div class = "ui welcome container">
	<div class = "ui text container">
		<h2>Select criteria for report:</h2>
		<div class=" ui padded centered grid container">
			<select id="criteria" class="ui dropdown" onchange={{action 'selectCategory' value='target.value'}}>
				<!-- <option value="">Select a Criteria</option> -->
				<option value="-1">Other</option>
				{{#each categoryModel as |category index|}}
				<option value={{index}}>{{category.name}}</option>
				{{/each}}
			</select>
			<select id="term" class="ui dropdown" onchange={{action 'selectTerm' value='target.value'}}>
				{{#each termModel as |semester index|}}
				<option value={{index}}>{{semester.name}}</option>
				{{/each}}
			</select>
			<div class="ui primary button" {{action 'generateReport'}}>Generate Report</div>
		</div>
	</div>
		<!--
		<div id="chart" class="hideChart">
		
			{{#if (inline-compare currentCategoryIndex "==" -1)}}
				{{ember-chart id='barchart' type='bar' data=barChartData options= options}}
			{{else}}
				{{ember-chart type='pie' data=pieChartData  height=100}}
			{{/if}}

		</div>
	-->
	<div class="ui relaxed items form">
		{{#if (inline-compare currentCategoryIndex "==" -1)}}
		<div id="chart"><canvas id="barChart"></canvas></div>
		{{else}}
		<div id="chart"><canvas id="pieChart"></canvas></div>
		{{/if}}
	</div>
	<div class="ui padded centered grid container">
		<div id="open" class="hideChart">
			<div class="ui button" {{action 'generatePDF'}}>
				Generate PDF
			</div>
			<!--<a class="" href='/assets/test.pdf' target="_blank"><div class="ui button">Open as PDF</div></a>-->
			<a class="" href='/assets/test.pdf' download><div class="ui button">Open as Excel</div></a>
		</div>
	</div>
</div>

