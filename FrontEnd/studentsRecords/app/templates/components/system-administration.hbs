<div class = "ui center aligned padded grid container">
  <div class = "ui basic segment">
    <div class = "ui huge header">
      Admin Portal
    </div>
  </div>
</div>
{{#if ADM01IsPermitted }}
<div class = "ui grid" style = "margin:0">
    <div class = "sixteen wide column" style="padding-bottom:0">
        <div class = "ui secondary pointing fluid four item menu">
            <div style="cursor: pointer;" class="active item" data-tab="ManageUsers">User Accounts</div>
            <div style="cursor: pointer;" class="item" data-tab="ManageRoles">System Roles</div>
            <div style="cursor: pointer;" class="item" data-tab="ManageFeatures">System Features/Privileges</div>
            <div style="cursor: pointer;" class="item" data-tab="ManageAdjudication">Manage Adjudication</div>
        </div>
    </div>
</div>

<div class = "ui tab segment active" data-tab="ManageUsers">
  {{manage-users}}
</div>
<div class = "ui tab segment" data-tab="ManageRoles">
  {{manage-roles}}
</div>
<div class = "ui tab segment" data-tab="ManageFeatures">
  {{manage-features}}
</div>
<div class = "ui tab segment" data-tab="ManageAdjudication">
  <div class = "ui two column centered relaxed grid">
    <div class = "three wide column">
      <div class = "ui secondary vertical fluid pointing menu">
        <div style="cursor: pointer;" class="active item" data-tab="Rules">Manage Rules</div>
        <div style="cursor: pointer;" class="item" data-tab="Categories">Manage Categories</div>
      </div>
    </div>
    <div class = "twelve wide column">
      <div class = "ui tab segment active" data-tab="Rules" style = "margin-top:0">
        {{manage-adjudication-rules}}
      </div>
      <div class = "ui tab segment" data-tab="Categories" style = "margin-top:0">
        {{manage-adjudication-categories}}
      </div>
    </div>
  </div>
</div>
