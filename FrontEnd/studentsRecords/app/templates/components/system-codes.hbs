<div class="ui center aligned header">
  <h2>System Codes</h2>
</div>

  <!-- Show data entry form -->

  <div class="ui top attached tabular menu">
    <div style="cursor: pointer;" class="active item" data-tab="gender">Gender</div>
    <div style="cursor: pointer;" class="item" data-tab="residency">Residency</div>
  </div>

  <div class="ui bottom attached active tab segment" data-tab="gender">
    <table>
        <tr>
            <th>Code</th>
            <th>Gender</th>
        </tr>
        {{#each genderModel as |gender|}}
        <tr>
            <td>{{gender.id}}</td>
            <td>{{gender.name}}</td>
            <td>
                <button>Edit</button><button>Delete</button>
            </td>
        </tr>
        {{/each}}
        <tr>
            <td></td>
            <td>
                <input type="text">
            </td>
            <td>
                <button>Add</button>
            </td>
        </tr>
    </table>
  </div>

  <div class="ui bottom attached tab segment" data-tab="residency">
      <h3></h3>
  </div>
  