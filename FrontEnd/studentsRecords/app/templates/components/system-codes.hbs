<div class="ui center aligned header">
  <h2>System Codes</h2>
</div>


{{#if showGenderDeleteConfirmation}}
    {{delete-gender gender = currentGender showWindow = showGenderDeleteConfirmation}}
    {{else if showResidencyDeleteConfirmation}}
    {{delete-residency residency = currentResidency showWindow = showResidencyDeleteConfirmation}}
{{/if}}

  <!-- Show data entry form -->

  <div class="ui top attached tabular menu">
    <div style="cursor: pointer;" class="active item" data-tab="gender">Gender</div>
    <div style="cursor: pointer;" class="item" data-tab="residency">Residency</div>
  </div>

  <div class="ui bottom attached active tab segment" data-tab="gender">
    <table class="ui fixed table">
        <thead>
        <tr>
            <th>Gender</th>
            <th><!--spacer--></th>
        </tr>
        </thead>
        {{#each genderModel as |gender|}}
        <tr>
            <td>
                <div class="ui fluid input">
                    {{input type="text" value = gender.name}}
                </div>
            </td>
            <td>
                <div class="ui two buttons">
                    <button class="ui button" {{action "saveGender" gender}}>Save</button>
                    <button class="ui button" {{action "deleteGender" gender}}>Delete</button>
                </div>
            </td>
        </tr>
        {{/each}}
        <tr>
            <td><!--spacer--></td>
            <td>
                <div class="ui fluid input">
                    {{input type="text" value = newGenderName}}
                </div>
            </td>
            <td>
                <button class="ui button" {{action "addGender"}}>Add</button>
            </td>
        </tr>
    </table>
  </div>

  <div class="ui bottom attached tab segment" data-tab="residency">
      <table class="ui fixed table">
        <thead>
            <tr>
            <th>Residency</th>
            <th><!--spacer--></th>
            </tr>
        </thead>
        
        {{#each residencyModel as |residency|}}
        <tr>
            <td>
                <div class="ui fluid input">
                    {{input type="text" value = residency.name}}
                </div>
            </td>
            <td>
                <div class="ui two buttons">
                    <button class="ui button" {{action "saveResidency" residency}}>Save</button>
                    <button class="ui button" {{action "deleteResidency" residency}}>Delete</button>
                </div>
            </td>
        </tr>
        {{/each}}
        <tr>
            <td><!--spacer--></td>
            <td>
                <div class="ui fluid input">
                    {{input type="text" value = newResidencyName}}
                </div>
            </td>
            <td>
                <button class="ui button" {{action "addResidency"}}>Add</button>
            </td>
        </tr>
        </table>
  </div>
  